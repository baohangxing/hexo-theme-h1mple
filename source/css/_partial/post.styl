.post {
  margin: 1em auto;
  padding: 30px 50px;
  //background-color: #fff;
  border: 1px solid #ddd;
  border-radius: 20px;
}


.posts  {
  .post:first-child {
    margin-top: 0;
  }

  .post-title {
    font-size: 1.5em;

    .post-title-link {
      //color: #368CCB;
      text-decoration: none;
    }
  }

  .post-content {
    a {
      color: #368CCB;
      text-decoration: none;
    }
  }

  .post-meta {
    //color: #BABABA;
  }
}

blockquote {
  padding: 0.5rem 1rem;
  border-left: 8px solid #81BEF7;
  background-color: #222526;
  border-radius: 5px;
  margin-block-start: 0;
  margin-block-end: 1em;
  margin-inline-start: 0;
  margin-inline-end: 40px;
}
blockquote > * {
  background-color: #222526;
}

a:hover {
  color: #368CCB;
}

figure {
  margin-block-start: 0;
  margin-block-end: 0;
  margin-inline-start: 0;
  margin-inline-end: 0;
  display: block
}
figure table{
  display: block;
  border-color: #222526;
  margin: 0 10px;
  padding:0 10px;
  border-radius: 10px;
}
figure *{
  background-color: #222526 !important;
  font-family: Consolas, 'Courier New', monospace;
  color: #AC9178;
  word-break: break-all;
  white-space: pre-wrap;
  .gutter{///ghrdgrgd
    display: none;
  }
}

img{
  max-width: 70vw;
}
